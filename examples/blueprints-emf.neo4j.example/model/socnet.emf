@namespace(uri="http://www.eclipselabs.org/socnet", prefix="socnet")
package socnet;

class SocialNetwork {
   val Person[*] persons;   
}

class Person {
   attr String[1] name;
   ref Person[*] friends;
   val StatusUpdate[*]#person status;
   op void removeFriend(Person[1] p);
   op Person[*] getFriendsOfFriends();
   op Person[*] getShortestPathTo(Person p, int maxDepth);
} 

class StatusUpdate {
   attr String text;
   attr Date date;
   ref Person#status person;
}
