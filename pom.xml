	<artifactId>blueprints-emf</artifactId>
	<version>0.1.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<modules>
		<module>bundles/org.eclipselabs.blueprints.emf</module>
		<module>features/org.eclipselabs.blueprints.emf.feature</module>
		<module>tests/org.eclipselabs.blueprints.emf.junit</module>
		<module>tests/org.eclipselabs.blueprints.emf.neo4j.junit</module>
